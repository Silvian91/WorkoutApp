<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_delete_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_dialog_delete_routines"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/dialog_delete_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/buttonColorAndBackground"
        android:text="@string/text_dialog_delete_routines_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_delete_confirm"
        app:layout_constraintTop_toBottomOf="@id/dialog_delete_header"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/dialog_delete_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/buttonColorAndBackground"
        android:text="@string/text_dialog_delete_routines_confirm"
        app:layout_constraintStart_toEndOf="@id/dialog_delete_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_delete_header"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>