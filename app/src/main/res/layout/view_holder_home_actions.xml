<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/add_workout"
            style="@style/buttonColorAndBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/increasedMargin"
            android:text="@string/text_add_workout" />

        <Button
            android:id="@+id/show_workout"
            style="@style/buttonColorAndBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/increasedMargin"
            android:text="@string/text_show_workout" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>