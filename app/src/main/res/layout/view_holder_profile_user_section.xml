<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_curved_primary"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/button_add_profile_picture"
        android:layout_width="@dimen/_68sdp"
        android:layout_height="@dimen/_68sdp"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile_image"
        app:civ_border_color="@color/AntiqueWhite"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/AntiqueWhite"
        android:focusable="true"
        android:clickable="true"/>

    <TextView
        android:id="@+id/profile_username"
        style="@style/headingStyle"
        android:textColor="@color/AntiqueWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:text="@string/text_profile_username"/>


</LinearLayout>