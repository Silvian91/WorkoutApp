<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/DarkSlateGray</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="profileToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/AntiqueWhite</item>
        <item name="actionMenuTextColor">@color/AntiqueWhite</item>
        <item name="android:textColorSecondary">@color/AntiqueWhite</item>
    </style>

    <!-- Splash Screen -->
    <style name="splashScreenStyle" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Buttons -->
    <style name="buttonColorAndBackground" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/AntiqueWhite</item>
        <item name="android:textSize">@dimen/buttonsFont</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="alternativeButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/DarkRed</item>
        <item name="android:textColor">@color/DarkSlateGray</item>
        <item name="android:textSize">@dimen/buttonsFont</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body -->
    <style name="textBodyStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/DarkSlateGray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textFont</item>
    </style>

    <!-- Input Field -->
    <style name="inputFields" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@color/White</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/DarkSlateGray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textFont</item>
    </style>

    <!-- Input Field -->
    <style name="textParagraphStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/DarkSlateGray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/paragraphFont</item>
    </style>


    <!--    <style name="inputLayout" parent="Widget.Design.TextInputLayout">-->
<!--        <item name="editTextStyle">@style/inputText</item>-->
<!--    </style>-->

